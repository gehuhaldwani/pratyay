---
import config from "@/config.ts";
import SocialRow from "./SocialRow.astro";
---

<div class="w-full h-[1px] overflow-hidden gradient-line"></div>
<div
	class="py-14 transition-all duration-300 bg-gradient-to-r from-theme-secondary/10 to-theme-accent/10 dark:bg-gradient-to-r dark:from-theme-accent/[2%] dark:to-theme-secondary/[5%]"
>
	<footer
		class="container mx-auto max-w-screen-xl flex flex-initial lg:flex-row flex-col gap-10 items-center px-7"
	>
		<div class="logo flex-none">
			<a
				href="/"
				class="font-bold font-theme-space text-lg hover:text-theme-accent transition-all duration-300 dark:text-white dark:hover:text-theme-accent"
				>{config.title}</a
			>
		</div>

		<SocialRow socials={config.socials} />

		<div class="grow lg:text-right">
			<span
				class="text-[14px] text-theme-dark/40 transition-all duration-300 dark:text-theme-white/40"
			>
				Â© {new Date().getFullYear()}
				{config.title}. All rights reserved.
			</span>
		</div>
	</footer>
</div>
